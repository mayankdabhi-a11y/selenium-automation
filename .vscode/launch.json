{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "java",
			"name": "TestNG: Run Suite",
			"request": "launch",
			"mainClass": "org.testng.TestNG",
			"classPaths": [],
			"args": "src/test/resources/testng.xml",
			"projectName": "selenium-vscode-framework",
			"vmArgs": "-Dbrowser=${input:browser} -DbaseUrl=${input:baseUrl} -Dheadless=${input:headless}",
			"presentation": {
				"reveal": "always"
			}
		}
	],
	"inputs": [
		{
			"id": "browser",
			"type": "pickString",
			"default": "chrome",
			"options": ["chrome", "firefox", "edge", "safari"],
			"description": "Browser"
		},
		{
			"id": "baseUrl",
			"type": "promptString",
			"default": "https://example.com",
			"description": "Base URL"
		},
		{
			"id": "headless",
			"type": "pickString",
			"default": "false",
			"options": ["true", "false"],
			"description": "Headless"
		}
	]
}
